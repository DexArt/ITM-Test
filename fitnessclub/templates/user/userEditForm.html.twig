<div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div id="login-box" class="col-md-12">

                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="alert alert-success">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {{ form_start(form, {attr: {class: 'form',id: "login-form",novalidate: 'novalidate'}}) }}
                {% if form.firstname is defined %}
                    <div class="form-group">
                        {% if form_errors(form.firstname) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.firstname) }}
                            </div>
                        {% endif %}
                        <label for="firstname" class="text-info">Firstname</label><br>
                        {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endif %}
                {% if form.lastname is defined %}
                    <div class="form-group">
                        {% if form_errors(form.lastname) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.lastname) }}
                            </div>
                        {% endif %}
                        <label for="lastname" class="text-info">Lastname</label><br>
                        {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endif %}
                {% if form.email is defined %}
                    <div class="form-group">
                        {% if form_errors(form.email) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.email) }}
                            </div>
                        {% endif %}
                        <label for="email" class="text-info">Email</label><br>
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endif %}
                {% if form.gender is defined %}
                    <div class="form-group">
                        <label for="gender" class="text-info">Gender</label><br>
                        {{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endif %}
                {% if form.birthday is defined %}
                    <div class="form-group">
                        {% if form_errors(form.birthday) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.birthday) }}
                            </div>
                        {% endif %}
                        <label for="birthday" class="text-info">Birthday</label><br>
                        <div class="input-group date">
                            {{ form_widget(form.birthday, { 'attr': {'class': 'form-control', 'required':'required', 'onkeydown': "return false"} }) }}
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                {% endif %}
                {% if form.phone is defined %}
                    <div class="form-group">
                        {% if form_errors(form.phone) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.phone) }}
                            </div>
                        {% endif %}
                        <label for="phone" class="text-info">Phone</label><br>
                        {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% endif %}
                {% if form.is_active is defined %}
                    <div class="form-group">
                        {% if form_errors(form.is_active) %}
                            <div class="alert alert-danger" role="alert" style="height: 50px">
                                {{ form_errors(form.is_active) }}
                            </div>
                        {% endif %}
                        <label class="form-check-label" for="isAuthorised">
                            Active
                        </label>
                        {{ form_widget(form.is_active, { 'attr': {'class': 'form-input', 'required':'required'} }) }}
                    </div>
                {% endif %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>