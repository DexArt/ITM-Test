{% extends 'login.html.twig' %}

{% block title %}Login!{% endblock %}
{% block body %}

    {% block stylesheets %}
        <link href="/asset/css/style.css" rel="stylesheet" />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    {% endblock %}

    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="{{ path('login') }}" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    {{ error.messageKey }}
                                </div>

                            {% endif %}
                            <div class="form-group">
                                <label for="email" class="text-info">Email:</label><br>
                                <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="form-group"><br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Log In">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
