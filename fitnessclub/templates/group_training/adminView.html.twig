{% extends 'adminBase.html.twig' %}

{% block title %}GroupTraining{% endblock %}

{% block body %}
    <div class="">

        <div class="">
            <div class="text-center" style="width: 100%; height: 300px">
                <div class="col-md-4 text-center"
                     style="width: 100%; height: 300px !important; max-width: 100% !important;">
                    <div class="border p-4" style="height: 700px">
                        <h2 class="h5" style="text-transform: uppercase"><strong>{{ training.name }}</strong></h2>
                        <p>Description</p>
                        <p>{{ training.description }}</p>
                        <div class="container">


                            {{ form_errors(form) }}

                            {{ form_start(form, {attr: {class: 'form',id: "login-form"}}) }}
                            <div class="form-group">
                                <label for="comment">Phone</label>
                                {{ form_widget(form.phone_message, { 'attr': {'class': 'form-control', 'rows':'5', 'id':'phone'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="comment">Email</label>
                                {{ form_widget(form.email_message, { 'attr': {'class': 'form-control', 'rows':'5', 'id':'phone'} }) }}
                            </div>
                            <div class="form-group align-bottom">
                                {{ form_widget(form.send) }}
                            </div>

                            {{ form_end(form) }}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
